[loggers]
keys=root,SuperVdsm,Gluster

[handlers]
keys=logfile

[formatters]
keys=long

[logger_root]
level=DEBUG
handlers=logfile
propagate=0

[logger_SuperVdsm]
level=DEBUG
handlers=logfile
qualname=SuperVdsm
propagate=0

[logger_Gluster]
level=DEBUG
handlers=logfile
qualname=Gluster
propagate=0

[handler_logfile]
class=vdsm.common.logutils.UserGroupEnforcingHandler
args=('root', 'root', '@VDSMLOGDIR@/supervdsm.log',)
filters=storage.misc.TracebackRepeatFilter
level=DEBUG
formatter=long

[formatter_long]
format: %(threadName)s::%(levelname)s::%(asctime)s::%(module)s::%(lineno)d::%(name)s::(%(funcName)s) %(message)s
