import os
import glob

import configNetwork


def main():
    # this should NOT be used in ovirt-node, where configuration persistence is
    # handled otherwise.
    try:
        if os.path.exists('/etc/rhev-hypervisor-release') or \
           not len(glob.glob('/etc/ovirt-node-*-release')) == 0:
                return
    except:
        pass

    configWriter = configNetwork.ConfigWriter()
    configWriter.loadBackups()
    configWriter.restoreBackups()
    configWriter.clearBackups()


if __name__ == '__main__':
    main()
