# Description:	  Persist all VDSM hooks
#

. @LIBEXECDIR@/ovirt_functions.sh

HOOKS_DIR=/usr/libexec/vdsm/hooks

if isOvirt
then
    . /usr/libexec/ovirt-functions
    for hook in "$HOOKS_DIR"/*/*
    do
        if [[ -f "$hook" ]]
        then
            ovirt_store_config "$hook"
        fi
    done
else
    echo "Host is not RHEV-Hypervisor"
    exit 1
fi
